<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/rounded_corners"
    android:backgroundTint="@color/white">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/greyDark"
        app:contentPadding="20dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
        app:srcCompat="@drawable/text_logo"
        app:tint="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/typo_round_bold"
            android:maxLines="2"
            android:minLines="1"
            android:singleLine="false"
            android:text="@string/device_status"
            android:textColor="@color/grey"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"/>
        
        <TextView
            android:id="@+id/tvUuid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/typo_round_bold"
            android:maxLines="2"
            android:minLines="1"
            android:singleLine="false"
            android:text="UUID"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/typo_round_bold"
                android:minLines="1"
                android:singleLine="false"
                android:text="User Type: "
                android:textColor="@color/greyLight"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvUserType"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:ellipsize="end"
                android:fontFamily="@font/typo_round_bold"
                android:minLines="1"
                android:singleLine="false"
                android:text="Admin"
                android:textColor="@color/grey"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/typo_round_bold"
                android:minLines="1"
                android:singleLine="false"
                android:text="Device ID: "
                android:textColor="@color/greyLight"
                android:textSize="14sp" />

            <TextView
                android:layout_weight="1"
                android:id="@+id/tvDeviceId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:ellipsize="end"
                android:fontFamily="@font/typo_round_bold"
                android:minLines="1"
                android:singleLine="false"
                android:text="Device ID"
                android:textColor="@color/grey"
                android:textSize="14sp" />
        </LinearLayout>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            
            android:layout_marginTop="5dp">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/typo_round_bold"
                android:minLines="1"
                android:singleLine="false"
                android:text="Auth Status: "
                android:textColor="@color/greyLight"
                android:textSize="14sp" />
            <TextView
                android:layout_weight="1"
                android:id="@+id/tvAuthorised"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginStart="3dp"
                android:fontFamily="@font/typo_round_bold"
                android:minLines="1"
                android:singleLine="false"
                android:text="Authorised"
                android:textColor="@color/grey"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            
            android:layout_marginTop="5dp">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/typo_round_bold"
                android:minLines="1"
                android:singleLine="false"
                android:text="Training Status: "
                android:textColor="@color/greyLight"
                android:textSize="14sp" />
            <TextView
                android:layout_weight="1"
                android:id="@+id/tvTraining"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginStart="3dp"
                android:fontFamily="@font/typo_round_bold"
                android:minLines="1"
                android:singleLine="false"
                android:text="Trained"
                android:textColor="@color/grey"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnClose"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/clickable_button"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/close"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>